{
  "name": "task-manager-monorepo-runner",
  "version": "1.0.0",
  "private": true,
  "description": "Runs FastAPI backend and Next.js frontend concurrently",
  "scripts": {
    "dev:backend": ".\\backend\\.venv\\Scripts\\python.exe -m uvicorn backend.main:app --host 0.0.0.0 --port 8000",
    "watch:backend": "nodemon --watch backend --ext py --exec \"backend\\.venv\\Scripts\\python.exe -m uvicorn backend.main:app --host 0.0.0.0 --port 8000\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm:watch:backend\" \"npm:dev:frontend\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "delay-cli": "^2.0.0",
    "nodemon": "^3.1.10"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react-window": "^1.8.11"
  }
}
